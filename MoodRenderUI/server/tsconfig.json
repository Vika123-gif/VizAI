{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../dist",
    "rootDir": "..",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "../server/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "../client",
    "../node_modules"
  ]
}
