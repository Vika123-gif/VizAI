{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "index-prod.ts",
    "app.ts",
    "routes.ts",
    "storage.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "index-dev.ts",
    "../vite.config.ts",
    "../client",
    "../shared"
  ]
}
